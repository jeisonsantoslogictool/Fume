@inject Fume.Web.Services.CartService cartService
@inject NavigationManager navigationManager
@using Fume.Web.Helpers
@using MudBlazor
@using fume.shared.Enttities

<style>
    .mini-cart-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        z-index: 9999;
        animation: fadeIn 0.2s ease-in;
    }

    .mini-cart-dropdown {
        position: fixed;
        top: 70px;
        right: 20px;
        width: 400px;
        max-height: 500px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        z-index: 10000;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        animation: slideIn 0.3s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes slideIn {
        from {
            transform: translateY(-20px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .mini-cart-header {
        padding: 20px;
        background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .mini-cart-close {
        cursor: pointer;
        background: rgba(255,255,255,0.2);
        border: none;
        color: white;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.3s;
    }

    .mini-cart-close:hover {
        background: rgba(255,255,255,0.3);
    }

    .mini-cart-items {
        flex: 1;
        overflow-y: auto;
        padding: 15px;
        max-height: 300px;
    }

    .mini-cart-item {
        display: flex;
        gap: 15px;
        padding: 15px;
        border-bottom: 1px solid #eee;
        transition: background 0.2s;
    }

    .mini-cart-item:hover {
        background: #f8f9fa;
    }

    .mini-cart-item:last-child {
        border-bottom: none;
    }

    .mini-cart-item-image {
        width: 60px;
        height: 60px;
        border-radius: 8px;
        overflow: hidden;
        flex-shrink: 0;
        background: #f5f5f5;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .mini-cart-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .mini-cart-item-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .mini-cart-item-name {
        font-weight: 600;
        color: #2c3e50;
        font-size: 0.95rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .mini-cart-item-quantity {
        color: #6c757d;
        font-size: 0.85rem;
    }

    .mini-cart-item-price {
        color: #27ae60;
        font-weight: 600;
        font-size: 0.95rem;
    }

    .mini-cart-item-remove {
        cursor: pointer;
        color: #dc3545;
        background: none;
        border: none;
        padding: 5px;
        transition: transform 0.2s;
    }

    .mini-cart-item-remove:hover {
        transform: scale(1.2);
    }

    .mini-cart-empty {
        padding: 60px 20px;
        text-align: center;
        color: #6c757d;
    }

    .mini-cart-empty-icon {
        font-size: 4rem;
        opacity: 0.3;
        margin-bottom: 15px;
    }

    .mini-cart-footer {
        padding: 20px;
        border-top: 2px solid #eee;
        background: #f8f9fa;
    }

    .mini-cart-total {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        font-size: 1.1rem;
    }

    .mini-cart-total-label {
        font-weight: 600;
        color: #2c3e50;
    }

    .mini-cart-total-amount {
        font-weight: 700;
        color: #27ae60;
        font-size: 1.3rem;
    }

    .mini-cart-actions {
        display: flex;
        gap: 10px;
    }

    .mini-cart-btn {
        flex: 1;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .mini-cart-btn-primary {
        background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
        color: white;
    }

    .mini-cart-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(33, 150, 243, 0.4);
    }

    .mini-cart-btn-secondary {
        background: white;
        color: #2196F3;
        border: 2px solid #2196F3;
    }

    .mini-cart-btn-secondary:hover {
        background: #2196F3;
        color: white;
    }

    @@media (max-width: 768px) {
        .mini-cart-dropdown {
            width: calc(100vw - 40px);
            right: 20px;
        }
    }
</style>

@if (IsOpen)
{
    <div class="mini-cart-overlay" @onclick="Close"></div>
    <div class="mini-cart-dropdown" @onclick:stopPropagation="true">
        <div class="mini-cart-header">
            <span>Mi Carrito (@cartService.ItemCount)</span>
            <button class="mini-cart-close" @onclick="Close">
                <MudIcon Icon="@Icons.Material.Filled.Close" Size="Size.Small" />
            </button>
        </div>

        @if (isLoading)
        {
            <div class="mini-cart-items">
                @for (int i = 0; i < 3; i++)
                {
                    <div class="mini-cart-item">
                        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="60px" Height="60px" Animation="Animation.Wave" />
                        <div style="flex: 1;">
                            <MudSkeleton SkeletonType="SkeletonType.Text" Width="80%" Animation="Animation.Wave" />
                            <MudSkeleton SkeletonType="SkeletonType.Text" Width="40%" Animation="Animation.Wave" Class="mt-2" />
                            <MudSkeleton SkeletonType="SkeletonType.Text" Width="30%" Animation="Animation.Wave" Class="mt-1" />
                        </div>
                    </div>
                }
            </div>
        }
        else if (items == null || !items.Any())
        {
            <div class="mini-cart-empty">
                <div class="mini-cart-empty-icon">
                    <MudIcon Icon="@Icons.Material.Filled.ShoppingCartCheckout" Size="Size.Large" />
                </div>
                <p style="font-size: 1.1rem; font-weight: 600; margin-bottom: 5px;">Tu carrito está vacío</p>
                <p style="font-size: 0.9rem;">Agrega productos para comenzar tu compra</p>
            </div>
        }
        else
        {
            <div class="mini-cart-items">
                @foreach (var item in items)
                {
                    <div class="mini-cart-item">
                        <div class="mini-cart-item-image">
                            @if (item.Product?.ProductImages != null && item.Product.ProductImages.Any())
                            {
                                var imageUrl = ImageUrlHelper.GetProductImageUrl(item.Product.ProductImages.First());
                                <img src="@imageUrl" alt="@item.Product.Name" />
                            }
                            else
                            {
                                <MudIcon Icon="@Icons.Material.Filled.ImageNotSupported" Color="Color.Default" />
                            }
                        </div>
                        <div class="mini-cart-item-info">
                            <div class="mini-cart-item-name">@item.Product?.Name</div>
                            <div class="mini-cart-item-quantity">Cantidad: @item.Quantity</div>
                            <div class="mini-cart-item-price">@FormatHelper.FormatPrice(item.Value)</div>
                        </div>
                        <button class="mini-cart-item-remove" @onclick="() => RemoveItem(item.Id)" title="Eliminar">
                            <MudIcon Icon="@Icons.Material.Filled.Delete" Size="Size.Small" />
                        </button>
                    </div>
                }
            </div>

            <div class="mini-cart-footer">
                <div class="mini-cart-total">
                    <span class="mini-cart-total-label">Total:</span>
                    <span class="mini-cart-total-amount">@FormatHelper.FormatPrice(Total)</span>
                </div>
                <div class="mini-cart-actions">
                    <button class="mini-cart-btn mini-cart-btn-secondary" @onclick="ViewCart">
                        Ver Carrito
                    </button>
                    <button class="mini-cart-btn mini-cart-btn-primary" @onclick="Checkout">
                        Pagar
                    </button>
                </div>
            </div>
        }
    </div>
}

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    private List<TemporalSale>? items;
    private bool isLoading = false;

    private decimal Total => items?.Sum(i => i.Value) ?? 0;

    protected override async Task OnParametersSetAsync()
    {
        if (IsOpen && (items == null || !items.Any()))
        {
            await LoadItemsAsync();
        }
    }

    private async Task LoadItemsAsync()
    {
        isLoading = true;
        items = await cartService.GetCartItemsAsync();
        isLoading = false;
    }

    private async Task RemoveItem(int itemId)
    {
        var success = await cartService.RemoveFromCartAsync(itemId);
        if (success)
        {
            await LoadItemsAsync();
        }
    }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }

    private async Task ViewCart()
    {
        await OnClose.InvokeAsync();
        navigationManager.NavigateTo("/shopping-cart");
    }

    private async Task Checkout()
    {
        await OnClose.InvokeAsync();
        navigationManager.NavigateTo("/checkout");
    }
}
