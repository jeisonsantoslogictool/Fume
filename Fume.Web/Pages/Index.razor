    private async Task LoadSubCategoriesByCategoryIdAsync(int categoryId)
    {
        if (isNavigating) return;
        isNavigating = true;

        try
        {
            // Intentar obtener del cache primero
            if (subCategoriesCache.TryGetValue(categoryId, out var cachedSubCategories))
            {
                // Cargar la categoría usando índice O(1) - INSTANTÁNEO
                if (selectedCategory?.Id != categoryId)
                {
                    categoryIndex.TryGetValue(categoryId, out selectedCategory);
                }

                subCategories = cachedSubCategories;
                currentView = ViewType.SubCategories;
                loading = false;
                return;
            }

            // Cargar desde API
            loading = true;
            currentView = ViewType.SubCategories;

            // Cargar categoría usando índice O(1) - INSTANTÁNEO
            if (selectedCategory?.Id != categoryId)
            {
                if (!categoryIndex.TryGetValue(categoryId, out selectedCategory))
                {
                    // Si no está en índice, cargar desde API
                    var catResponse = await repository.Get<Category>($"/api/categories/{categoryId}");
                    if (!catResponse.Error && catResponse.Response != null)
                    {
                        selectedCategory = catResponse.Response;
                        categoryIndex[categoryId] = selectedCategory;
                    }
                }
            }

            var response = await repository.Get<List<SubCategory>>($"/api/subcategories/bycategory/{categoryId}");

            if (response.Error)
            {
                var message = await response.GetErrorMessageAsync();
                await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
                loading = false;
                return;
            }

            subCategories = response.Response;
            if (subCategories != null)
            {
                subCategoriesCache[categoryId] = subCategories;

                // Agregar al índice rápido para búsqueda O(1)
                foreach (var subCat in subCategories)
                {
                    if (subCat != null && !subCategoryIndex.ContainsKey(subCat.Id))
                    {
                        subCategoryIndex[subCat.Id] = subCat;
                    }
                }
            }

            loading = false;
        }
        finally
        {
            isNavigating = false;
        }
    }

    private async Task LoadProductsBySubCategoryIdAsync(int subCategoryId)
    {
        if (isNavigating) return;
        isNavigating = true;

        try
        {
            currentView = ViewType.Products;

            // Optimización: Buscar subcategoría solo si cambió - usar índice O(1)
            if (selectedSubCategory?.Id != subCategoryId)
            {
                // Búsqueda instantánea usando índice O(1)
                if (subCategoryIndex.TryGetValue(subCategoryId, out var foundSubCategory))
                {
                    selectedSubCategory = foundSubCategory;

                    // Obtener categoría padre usando índice O(1) - INSTANTÁNEO
                    if (selectedSubCategory.CategoryId > 0)
                    {
                        categoryIndex.TryGetValue(selectedSubCategory.CategoryId, out selectedCategory);
                    }
                }
                else
                {
                    // Si no está en índice, cargar desde API (último recurso)
                    var subCatResponse = await repository.Get<SubCategory>($"/api/subcategories/{subCategoryId}");
                    if (!subCatResponse.Error && subCatResponse.Response != null)
                    {
                        selectedSubCategory = subCatResponse.Response;

                        // Agregar al índice para futuras búsquedas
                        subCategoryIndex[subCategoryId] = selectedSubCategory;

                        if (selectedSubCategory.Category != null)
                        {
                            selectedCategory = selectedSubCategory.Category;
                        }
                    }
                }
            }

            // Intentar obtener productos del cache en memoria primero (instantáneo)
            if (productsCache.TryGetValue(subCategoryId, out var cachedProducts))
            {
                products = cachedProducts;
                loading = false;
                return;
            }

            // Cargar productos desde API solo si no están en cache
            loading = true;
            loadedImages.Clear();

            var response = await repository.Get<List<Product>>($"/api/products/subcategory/{subCategoryId}");

            if (response.Error)
            {
                var message = await response.GetErrorMessageAsync();
                await sweetAlertService.FireAsync("Error", message, SweetAlertIcon.Error);
                loading = false;
                return;
            }

            products = response.Response;
            if (products != null)
            {
                // Guardar en memoria (inmediato)
                productsCache[subCategoryId] = products;
                // Guardar en localStorage en segundo plano (sin bloquear)
                _ = cacheService.SetProductsAsync(subCategoryId, products);
            }

            loading = false;
        }
        finally
        {
            isNavigating = false;
        }
    }


