@code {
    private enum ViewType { Categories, SubCategories, Products }

    private ViewType currentView = ViewType.Categories;
    private ViewType? pendingView = null;
    private bool loading = true;
    private bool isAuthenticated;
    private bool firstRender = true;

    private List<Category>? categories;
    private List<SubCategory>? subCategories;
    private List<Product>? products;

    private Category? selectedCategory;
    private SubCategory? selectedSubCategory;

    // Índice rápido: ID de categoría -> Categoría (para búsqueda instantánea)
    private Dictionary<int, Category> categoryIndex = new Dictionary<int, Category>();

    // Para manejar el estado de carga de imágenes
    private HashSet<int> loadedImages = new HashSet<int>();

    // Para prevenir clics repetitivos
    private bool isNavigating = false;

    // Para el mini-carrito
    private bool isMiniCartOpen = false;

    // Cache de subcategorías por ID de categoría (ahora se usa el servicio compartido)
    private Dictionary<int, List<SubCategory>> subCategoriesCache = new Dictionary<int, List<SubCategory>>();

    // Índice rápido: ID de subcategoría -> Subcategoría (para búsqueda instantánea)
    private Dictionary<int, SubCategory> subCategoryIndex = new Dictionary<int, SubCategory>();

    // Cache de productos por ID de subcategoría (en memoria para rendimiento)
    private Dictionary<int, List<Product>> productsCache = new Dictionary<int, List<Product>>();

    // Control de renders
    private bool shouldRender = true;

    protected override bool ShouldRender()
    {
        if (!shouldRender)
        {
            shouldRender = true;
            return false;
        }
        return true;
    }

    [Parameter]
    public int? CategoryId { get; set; }

    [Parameter]
    public int? SubCategoryId { get; set; }

    [Parameter]
    [SupplyParameterFromQuery]
    public string Filter { get; set; } = "";

    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; } = null!;

    protected override void OnInitialized()
    {
        // Solo suscribirse al evento de prefetch y carrito
        catalogNavigation.OnSubCategoryPrefetch += HandleSubCategoryPrefetch;
        cartService.OnChange += OnCartChanged;
    }

    private void OnCartChanged()
    {
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Inicializar cache con versión
            await cacheService.InitializeAsync();

            await CheckIsAuthenticatedAsync();

            // Verificar si cambió el usuario y limpiar cache si es necesario
            var authState = await authenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            var userId = user.Identity?.IsAuthenticated == true
                ? user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
                : null;
            await cacheService.CheckAndClearIfUserChangedAsync(userId);

            // Inicializar el carrito si el usuario está autenticado
            if (isAuthenticated)
            {
                await cartService.InitializeAsync();
            }

            // Cargar categorías primero
            await LoadCategoriesAsync();

            // Pre-cargar productos desde localStorage en memoria
            await LoadAllProductsFromLocalStorage();

            // Luego cargar la vista basada en parámetros de ruta
            await LoadViewBasedOnParametersAsync();

            this.firstRender = false;
            StateHasChanged();
        }
    }

    private async Task LoadAllProductsFromLocalStorage()
    {
        // Pre-cargar productos guardados en localStorage al iniciar
        // Esto mejora el rendimiento al tener todo en memoria
        // (solo leer localStorage una vez al inicio, no durante navegación)

        // Nota: Por ahora no pre-cargamos todos los productos porque no sabemos qué IDs existen
        // Los productos se cargarán bajo demanda y se guardarán en memoria
        // Esta estructura permite expandir el pre-cargado en el futuro si es necesario
        await Task.CompletedTask;
    }

    protected async override Task OnParametersSetAsync()
    {
        // Siempre cargar la vista basada en parámetros cuando cambian
        if (!firstRender)
        {
            await LoadViewBasedOnParametersAsync();
        }
    }

    private async Task LoadViewBasedOnParametersAsync()
    {
        // Si hay SubCategoryId, mostrar productos
        if (SubCategoryId.HasValue && SubCategoryId.Value > 0)
        {
            await LoadProductsBySubCategoryIdAsync(SubCategoryId.Value);
        }
        // Si hay CategoryId, mostrar subcategorías
        else if (CategoryId.HasValue && CategoryId.Value > 0)
        {
            await LoadSubCategoriesByCategoryIdAsync(CategoryId.Value);
        }
        // Si no hay parámetros, mostrar categorías
        else if (string.IsNullOrWhiteSpace(Filter))
        {
            await LoadCategoriesViewAsync();
        }
    }

    public void Dispose()
    {
        // Desuscribirse de los eventos cuando el componente se destruye
        catalogNavigation.OnSubCategoryPrefetch -= HandleSubCategoryPrefetch;
        cartService.OnChange -= OnCartChanged;
    }


    private void HandleSubCategoryPrefetch(SubCategory subCategory)
    {
        // Pre-cargar productos en segundo plano sin cambiar la vista
        _ = Task.Run(async () =>
        {
            // Solo pre-cargar si no está en memoria
            if (!productsCache.ContainsKey(subCategory.Id))
            {
                try
                {
                    var response = await repository.Get<List<Product>>($"/api/products/subcategory/{subCategory.Id}");
                    if (!response.Error && response.Response != null)
                    {
                        // Guardar en memoria y localStorage (sin bloquear)
                        productsCache[subCategory.Id] = response.Response;
                        _ = cacheService.SetProductsAsync(subCategory.Id, response.Response);
                    }
                }
                catch
                {
                    // Silenciar errores de prefetch
                }
            }
        });
    }

